<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Hausuebung2</title>
  <link href="/assets/css/bootstrap.css" rel="stylesheet" type="text/css"/>
</head>
<body>
  <div class="container">
    <h2>User List</h2>
        <button class="btn btn-success" data-toggle="modal" data-target="#myModalAdd">Add New</button>
    <table class="table table-striped" id="mytable">
      <thead>
        <tr>
          <th><a href="">User ID</a></th>
          <th><a href="">Benutzername</a></th>
          <th><a href="">Vorname</a></th>
          <th><a href="">Nachname</a></th>
          <th><a href="">Passwort</a></th>
          <th><a href="">Email</a></th>
          <th><a href="">Rolle</a></th>
          <th><a href="">Action</a></th>
        </tr>
      </thead>
      <tbody>
         {{#each results}}
        <tr>
          <td>{{ product_id }}</td>
          <td>{{ benutzer_name }}</td>
          <td>{{ vor_name }}</td>
          <td>{{ nach_name }}</td>
          <td>{{ passwort }}</td>
          <td>{{ email }}</td>
          <td>{{ rolle }}</td>
          <td>
            <a href="javascript:void(0);" class="btn btn-sm btn-info edit" data-id="{{ product_id }}" data-vor_name="{{ vor_name }}" data-nach_name="{{ nach_name }}" data-passwort="{{ passwort }}" data-email="{{ email }}" data-rolle="{{ rolle }}">Edit</a>
            <a href="javascript:void(0);" class="btn btn-sm btn-danger delete" data-id="{{ product_id }}">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
 
    <!--Add User-->
      <form action="/save" method="POST">
        <div class="modal fade" id="myModalAdd" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
         <div class="modal-dialog" role="document">
           <div class="modal-content">
             <div class="modal-header">
               <h5 class="modal-title" id="exampleModalLabel">Add New User</h5>
               <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                 <span aria-hidden="true">&times;</span>
               </button>
             </div>
             <div class="modal-body">
               <div class="form-group">
                   <input type="text" name="benutzer_name" class="form-control" placeholder="Product Name" required>
               </div>
 
               <div class="form-group">
                   <input type="text" name="vor_name" class="form-control" placeholder="Vorname" required>
               </div>
                <div class="form-group">
                   <input type="text" name="nach_name" class="form-control" placeholder="Nachname" required>
               </div>
                <div class="form-group">
                   <input type="password" name="passwort" class="form-control" placeholder="Passwort" required>
               </div>
                <div class="form-group">
                   <input type="text" name="email" class="form-control" placeholder="E-mail" required>
               </div>
                <div class="form-group">
                   <input type="text" name="rolle" class="form-control" placeholder="Rolle" required>
               </div>
             </div>
             <div class="modal-footer">
               <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
               <button type="submit" class="btn btn-primary">Save</button>
             </div>
           </div>
         </div>
        </div>
     </form>
 
     <!--Update User-->
   <form action="/update" method="POST">
       <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Edit Product</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div class="form-group">
                  <input type="text" name="benutzer_name" class="form-control benutzer_name" placeholder="Banutzername" required>
              </div>
 
              <div class="form-group">
                  <input type="text" name="vor_name" class="form-control vor_name" placeholder="Price" required>
              </div>
              <div class="form-group">
                  <input type="text" name="nach_name" class="form-control nach_name" placeholder="Price" required>
              </div>
              <div class="form-group">
                  <input type="text" name="passwort" class="form-control passwort" placeholder="Price" required>
              </div>
              <div class="form-group">
                  <input type="text" name="email" class="form-control email" placeholder="Price" required>
              </div>
              <div class="form-group">
                  <input type="text" name="rolle" class="form-control rolle" placeholder="Price" required>
              </div>
            </div>
            <div class="modal-footer">
              <input type="hidden" name="id" class="product_id">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Update</button>
            </div>
          </div>
        </div>
       </div>
  </form>
 
     <!--Delete User-->
      <form id="add-row-form" action="/delete" method="POST">
         <div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
               <div class="modal-content">
                   <div class="modal-header">
                                        <h5 class="modal-title" id="myModalLabel">Delete User</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                   </div>
                   <div class="modal-body">
                                                 <strong>Are you sure to delete this data?</strong>
                   </div>
                   <div class="modal-footer">
                                            <input type="hidden" name="product_id" class="form-control product_id2" required>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Delete</button>
                   </div>
                    </div>
            </div>
         </div>
     </form>
 
<script src="/assets/js/jquery-3.4.1.js"></script>
<script src="/assets/js/bootstrap.js"></script>
<script>
    $(document).ready(function(){
        $('#mytable').on('click','.edit',function(){
        var product_id = $(this).data('id');
        var benutzer_name = $(this).data('benutzer_name');
        var vor_name = $(this).data('vor_name');
        var nach_name = $(this).data('nach_name');
        var passwort = $(this).data('passwort');
        var email = $(this).data('email');
        var rolle = $(this).data('rolle');
        $('#EditModal').modal('show');
        $('.benutzer_name').val(benutzer_name);
        $('.vor_name').val(vor_name);
        $('.nach_name').val(nach_name);
        $('.passwort').val(passwort);
        $('.email').val(email);
        $('.rolle').val(rolle);
        $('.product_id').val(product_id);
      });
        
        $('#mytable').on('click','.delete',function(){
        var product_id = $(this).data('id');
        $('#DeleteModal').modal('show');
        $('.product_id2').val(product_id);
      });
 
    });
</script>
</body>
</html>